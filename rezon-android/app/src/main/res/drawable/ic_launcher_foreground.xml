<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Gradient definition for cyan to blue -->
    <aapt:attr name="android:fillColor">
        <gradient
            android:type="linear"
            android:startX="30"
            android:startY="30"
            android:endX="78"
            android:endY="78">
            <item android:offset="0" android:color="#00E5FF"/>
            <item android:offset="1" android:color="#2196F3"/>
        </gradient>
    </aapt:attr>

    <!-- R letter - vertical stem -->
    <path
        android:pathData="M32,28 L32,80 L42,80 L42,28 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="32"
                android:startY="28"
                android:endX="42"
                android:endY="80">
                <item android:offset="0" android:color="#00E5FF"/>
                <item android:offset="1" android:color="#2196F3"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- R letter - leg extending down-right -->
    <path
        android:pathData="M42,52 L42,58 L58,80 L68,80 L50,55 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="42"
                android:startY="52"
                android:endX="68"
                android:endY="80">
                <item android:offset="0" android:color="#00BCD4"/>
                <item android:offset="1" android:color="#2196F3"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Sound wave arc 1 (innermost) -->
    <path
        android:pathData="M48,54 A12,12 0 0,1 48,28"
        android:strokeWidth="4"
        android:strokeColor="#00E5FF"
        android:fillColor="#00000000"
        android:strokeLineCap="round"/>

    <!-- Sound wave arc 2 -->
    <path
        android:pathData="M56,58 A20,20 0 0,1 56,24"
        android:strokeWidth="4"
        android:strokeColor="#00D4E5"
        android:fillColor="#00000000"
        android:strokeLineCap="round"/>

    <!-- Sound wave arc 3 -->
    <path
        android:pathData="M64,62 A28,28 0 0,1 64,20"
        android:strokeWidth="4"
        android:strokeColor="#00C4D4"
        android:fillColor="#00000000"
        android:strokeLineCap="round"/>

    <!-- Sound wave arc 4 (outermost) -->
    <path
        android:pathData="M72,66 A36,36 0 0,1 72,16"
        android:strokeWidth="4"
        android:strokeColor="#2196F3"
        android:fillColor="#00000000"
        android:strokeLineCap="round"/>

</vector>
