<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black background -->
    <item android:drawable="@color/black"/>

    <!-- Logo icon centered top -->
    <item
        android:drawable="@drawable/splash_screen_logo"
        android:width="160dp"
        android:height="160dp"
        android:gravity="center_horizontal|top"
        android:top="180dp" />

    <!-- Reverie text below icon -->
    <item
        android:drawable="@drawable/splash_screen_text"
        android:width="240dp"
        android:height="60dp"
        android:gravity="center_horizontal|top"
        android:top="360dp" />

    <!-- Bottom tagline - subtle -->
    <item android:gravity="center_horizontal|bottom" android:bottom="100dp">
        <shape>
            <size android:width="200dp" android:height="20dp"/>
        </shape>
    </item>
</layer-list>
